{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "skipLibCheck": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "resolveJsonModule": true,

    /* Project Structure */
    "rootDir": "./src",
    "outDir": "./dist",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
